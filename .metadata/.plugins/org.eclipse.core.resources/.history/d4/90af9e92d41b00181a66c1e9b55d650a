package duck.app;

public class DecoyDuck {
	/*****
	 * Lab 1 - Duck App
	 * @author Hannah Mittman
	 */
	
	private static int i = 1;
	private static String nameSuffix = "Decoy Duck";
	private String name;
	
	DecoyDuck() {
		/*
		 * Constructor that make unique names for each different Decoy Duck by incrementing the number on the end of the name
		 */
		this.name= nameSuffix +i; 
		i++;
	}
	
	
	public String swim(){
		/*
		 * Method to tell the user that this unique duck is swimming and able to swim
		 */
		return "I am " + name +" of the DecoyDuck class of ducks and I am swimming \n";
	}
	
	public String toString(){
		/*
		 * Duck identify themselves
		 */
		return "I am a DecoyDuck. My name is " + name +".\n";
	}
	
}
