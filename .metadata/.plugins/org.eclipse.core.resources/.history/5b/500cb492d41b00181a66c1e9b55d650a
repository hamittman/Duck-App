package duck.app;

public class RubberDuck {
	/*****
	 * Lab 1 - Duck App
	 * @author Hannah Mittman
	 */
	private static int i = 1;
	private static String nameSuffix = "Rubber Duck";
	private String name;
	
	
		
	RubberDuck() {
		/*
		 * Constructor that make unique names for each different Rubber Duck by incrementing the number on the end of the name
		 */
		this.name= nameSuffix +i;
		i++;
	}
	
	public String quack(){
		/*
		 * Method to tell the user that this unique duck is quacking and able to quack
		 */
		return "Quack! Quack! says " + name +" of the RubberDuck class of ducks. \n";
	}
	
	public String swim(){
		/*
		 * Method to tell the user that this unique duck is swimming and able to swim
		 */
		return "I am "+name+ " of the RubberDuck class of ducks and I am swimming \n";
	}
	
	public String toString(){
		/*
		 * Duck identify themselves
		 */
		return "I am a RubberDuck. My name is " + name+ ". \n";
	}
	
}
